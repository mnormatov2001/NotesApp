{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5284"
      },
      "Https": {
        "Url": "https://localhost:7291",
        "Certificate": {
          // "Path": "certificate.pfx",
          // "Password": ""
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DbConnection": "Data Source=notesApp.Auth.db"
  },
  "SmtpClient": {
    "Host": "smtp.yandex.ru",
    "Port": 465,
    "UseSsl": true
  },
  "IdentityServerConfiguration": {
    "ApiScopes": [
      {
        "Name": "notes.app.webApi",
        "DisplayName": "NotesApp-WebAPI",
        "Description": "NotesApp-WebAPI",
        "UserClaims": [
          "name",
          "email"
        ]
      }
    ],
    "ApiResources": [
      {
        "Name": "notes.app.webApi",
        "DisplayName": "NotesApp-WebAPI",
        "Description": "NotesApp-WebAPI",
        "UserClaims": [
          "name",
          "email"
        ],
        "Scopes": [
          "notes.app.webApi"
        ]
      }
    ],
    "Clients": [
      {
        "ClientId": "notes-app-client",
        "ClientName": "NotesApp-Client",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RequirePkce": false,
        "RedirectUris": [
          "https://localhost:3000/signin-oidc"
        ],
        "AllowedCorsOrigins": [
          "https://localhost:3000"
        ],
        "PostLogoutRedirectUris": [
          "https://localhost:3000/signout-oidc"
        ],
        "AllowedScopes": [
          "notes.app.webApi",
          "openid",
          "profile"
        ],
        "AllowAccessTokensViaBrowser": true
      }
    ]
  } 
}
